{
  "line-length": {
    "line_length": 120,
    "code_blocks": false,
    "tables": false,
    "headings": false
  },
  "heading-increment": false,
  "heading-start-left": false,
  "no-duplicate-heading": {
    "siblings_only": true
  },
  "no-inline-html": {
    "allowed_elements": [
      "br",
      "details", 
      "summary",
      "img"
    ]
  },
  "no-bare-urls": false,
  "no-emphasis-as-heading": false,
  "fenced-code-language": false
}